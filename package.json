{
  "name": "jenkins-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build-ts": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "postinstall": "npm run build-ts",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "test": "cross-env NODE_ENV=unitTest nyc --reporter=lcov --reporter=text mocha --require ts-node/register --timeout 99999 --recursive 'tests/**/*.spec.ts' --exit",
    "coverage": "nyc report --reporter=lcov",
    "watch-node": "nodemon --ignore public/ --inspect=127.0.0.1:9230 dist/server-app.js -r newrelic newrelic.js",
    "watch-ts": "tsc --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "jest": "^29.6.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
